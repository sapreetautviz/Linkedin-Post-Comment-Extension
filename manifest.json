{
    "manifest_version": 3,
    "name": "LinkedIn Auto Commenter",
    "version": "1.0",
    "description": "Automates commenting on LinkedIn posts.",
    "permissions": ["storage", "tabs", "scripting", "activeTab"],
    "host_permissions": [
      "https://www.linkedin.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  